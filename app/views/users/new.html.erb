<h2>Please sign up!</h2>

<%= form_for @user do |f| %>
	<%=f.label :first_name %>
	<%=f.text_field :fname %>
	<%=f.label :last_name %>
	<%=f.password_field :lname %>
	<%=f.label :email %>
	<%=f.password_field :email %>
	<%=f.label :username %>
	<%=f.password_field :username %>
	<%=f.label :password %>
	<%=f.password_field :password %>
	<%=f.submit %>
<% end %>